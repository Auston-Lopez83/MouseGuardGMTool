@model List<MouseGuardGMTool.Models.TheMission>


@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Message"]</h2>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-default">
				<!-- Default panel contents -->
				<div class="panel-heading">Missions List</div>
				<div class="panel-body">
				<p>The winter skies are dark and drear. Once-green land is pale and severe. Supplies are short and night is long.
					Time stans still in is bittre song. Withered life sits frozen on the vine.
					Is this the end of days for yours and mine? "Tis but the season and such a thins turn.
					Lack of preparation is a cild lesson to learn"</p>
				</div>

				<!-- Table -->
				<table class="table">
				<thead>
						<th>Name</th>
						<th>Location</th>
						<th>Edit</th>
						</thead>
						<tbody>
						@foreach (var p in Model)
							{
							<tr>
								<td>@p.Name</td>
								<td>@p.Location</td>
								<td>
									<button type="button" class="btn btn-default btn-sm">
										<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
									</button>
									<button type="button" class="btn btn-default btn-sm">
										<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
									</button>
									<button type="button" class="btn btn-default btn-sm">
										<span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> View
									</button>

								</td>
							</tr>
							}
						</tbody>
					
				</table>
			</div>
		</div>
		<div class="col-md-6">
			<img src="/images/mg-trio.png">
		</div>
	</div>
</div>

